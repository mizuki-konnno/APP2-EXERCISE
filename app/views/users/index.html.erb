<div class="container px-5 px-sm-0">
<div class="row">
<div class="col-md-3">
<h2>User info</h2>
<table class="table" style="white-space: nowrap">
<tr>
<td>
<%= attachment_image_tag current_user, :profile_image, fallback: "no_image.jpg", :size=>'60x60' %>
</td><td></td>
</tr>

<tr><td><h6>name</h6></td><td><h6><%= current_user.name %></h6></td></tr>
<tr><td><h6>introduction</h6></td><td><h6><%= current_user.introduction %></h6></td></tr>

</table>


    <p><%= link_to edit_user_path(current_user),class: "btn btn-outline-secondary btn-block" do %>
    <i class="fas fa-user-cog"></i></i><%end%></p>


<%= render 'books/new.html',book:@book %>

</div>

<div class="col-md-8 offset-md-1">
<h1>Users</h1>

<table class="table table-hover table-inverse small">

<thead>
<tr>
<th>image</th><th>name</th><th></th>
</tr>
</thead>
<% @user.each do |user| %>


<tbody>
<tr>
<td><%= attachment_image_tag user, :profile_image, fallback: "no_image.jpg", :size =>'30x30' %></td>
<td><span><%= user.name  %></span></td>

<td><%= link_to "Show", user_path(user.id) %></td>
<td></td>
</tr>
</tbody>
<% end %>
</table>

</div>
</div>
</div>