<div class="container px-5 px-sm-0">
<div class="row">
<div class="col-md-3">
<h2>User info</h2>
<table class="table" style="white-space: nowrap">
<tr>
<td>
<%= attachment_image_tag @user, :profile_image, fallback: "no_image.jpg", :size=>'60x60' %>
</td><td></td>
</tr>

<tr><td><h6>name</h6></td><td><h6><%= @user.name %></h6></td></tr>
<tr><td><h6>introduction</h6></td><td><h6><%= @user.introduction %></h6></td></tr>

</table>



<p><%= link_to edit_user_path(@user),class: "btn btn-outline-secondary btn-block" do %>
<i class="fas fa-user-cog"></i><%end%></p>

<h2 class="mt-3">New book</h2>

<%= form_with model:@new_book,local:true do |f| %>
<div class="form-group">
<h6>Title</h6>
<%= f.text_field:title %>
</div>
<div class="form-group">
<h6>Opinion</h6>
<%= f.text_area:body %>
</div>
<div class="form-group">
<%= f.submit 'Create Book',class: 'btn btn-success' %>
</div>
<%end%>

</div>

<div class="col-md-8 offset-md-1">
<h1>Book detail</h1>

<table class="table table-hover table-inverse small">
<tr>
<td><%= attachment_image_tag @book.user, :profile_image, fallback: "no_image.jpg", :size =>'30x30' %></br>
 <%= link_to @book.user.name , user_path(@book.user.id) %>
</td>

<td><p><%= link_to @book.title, book_path(@book) %></p></td>
<td><p><%= @book.body %></p></td>

<td>
<% if @book.user == current_user %>
<%= link_to "Edit", edit_book_path(@book), class: 'btn btn-success' %>
<% end %>
</td>

<td>
<% if @book.user == current_user %>
    <%= link_to "Destroy", book_path(@book),  method: :Delete,"data-confirm" => "本当に消しますか？",class: 'btn btn-danger' %>
<% end %>
</td>
</tr>
</table>

</div>
</div>
</div>
